{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=PixelSpotDb;Username=postgres;Password=your_password;"
  },
  "JwtSettings": {
    "SecretKey": "PixelSpot_Secure_JWT_Key_For_Authentication_And_Authorization_2023",
    "Issuer": "PixelSpot",
    "Audience": "PixelSpotClients",
    "ExpiryMinutes": 60
  },
  "FileStorage": {
    "StoragePath": "./uploads",
    "BaseUrl": "http://localhost:5000/uploads"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
